<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:caca360.ViewModels"
             x:DataType="viewModels:CategoriasViewModel"
             x:Class="caca360.InfosPage"
             Title="Categorias"
             BackgroundImageSource="fundo.png">

    <ContentPage.BindingContext>
        <viewModels:CategoriasViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <CollectionView ItemsSource="{Binding Categorias}"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border StrokeShape="RoundRectangle 20"
                                Background="LightBlue"
                                StrokeThickness="0"
                                Padding="0"
                                Margin="0,10"
                                HorizontalOptions="Fill"
                                VerticalOptions="Fill">
                            <VerticalStackLayout Spacing="4" Padding="12" HorizontalOptions="Center" VerticalOptions="Center">
                                <Image Source="info.png" HeightRequest="48" WidthRequest="48" HorizontalOptions="Center"/>
                                <Label Text="{Binding .}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
