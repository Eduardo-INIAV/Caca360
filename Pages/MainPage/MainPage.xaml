<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="caca360.MainPage"
             Title="Main Page">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Bem-vindo ao Caça 360" 
               FontSize="24" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" />
        <Button Text="Ir para Dashboard" 
                Command="{Binding NavigateToDashboardCommand}" />
        <Button Text="Ir para Abate" 
                Command="{Binding NavigateToAbateCommand}" />
        <Button Text="Ir para Censos" 
                Command="{Binding NavigateToCensosCommand}" />
        <Button Text="Ir para Profile" 
        Command="{Binding NavigateToProfileCommand}" />
    </VerticalStackLayout>
</ContentPage>