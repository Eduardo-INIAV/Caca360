<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:caca360.Models"
             x:Class="caca360.AnimalPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" x:DataType="models:Animal">
            <Label x:Name="NomeLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Image x:Name="AnimalImage"
                   HeightRequest="200"
                   HorizontalOptions="Center" />

            <Label x:Name="DescricaoLabel"
                   FontSize="16"
                   TextColor="Black"
                   LineBreakMode="WordWrap"/>

            <!-- Link no fundo -->
            <Label Text="{Binding Link}"
                    TextColor="Blue"
                    HorizontalOptions="Center"
                    FontAttributes="Italic"
                    TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLinkTapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
