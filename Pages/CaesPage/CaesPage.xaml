<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:caca360.ViewModels"
             x:DataType="viewModels:CaesViewModel"
             xmlns:models="clr-namespace:caca360.Models"
             x:Class="caca360.CaesPage"
             Title="Caes">

    <ContentPage.BindingContext>
        <viewModels:CaesViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="24" Spacing="20">
        <CollectionView ItemsSource="{Binding Caes}"
                        SelectionMode="Single"
                        SelectedItem="{Binding AnimalSelecionado, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Animal">
                    <Border StrokeShape="RoundRectangle 20"
                            Background="LightBlue"
                            Padding="12"
                            Margin="0,10"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center">
                        <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                            <Image Source="{Binding Imagem}" HeightRequest="48" WidthRequest="48" HorizontalOptions="Center" />
                            <Label Text="{Binding Nome}" FontSize="14" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
