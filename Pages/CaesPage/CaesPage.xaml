<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:caca360.ViewModels"
             x:DataType="viewModels:CaesViewModel"
             xmlns:models="clr-namespace:caca360.Models"
             x:Class="caca360.CaesPage"
             Title="Caes"
             BackgroundImageSource="ccao.png">

    <ContentPage.BindingContext>
        <viewModels:CaesViewModel />
    </ContentPage.BindingContext>
    
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="True" />
    </Shell.BackButtonBehavior>


    <VerticalStackLayout Padding="24" Spacing="20">
        <CollectionView ItemsSource="{Binding Caes}"
                    SelectionMode="Single"
                    SelectedItem="{Binding DescSelecionado, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Desc">
                    <Border StrokeShape="RoundRectangle 20"
                 Background="Transparent"
                 StrokeThickness="0"
                 Padding="0"
                 Margin="0,10"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill">
                        <HorizontalStackLayout Padding="10" Spacing="12" VerticalOptions="Center">
                            <Border
                             Stroke="Gray"
                             StrokeThickness="2"
                             StrokeShape="RoundRectangle 16"
                             Background="White"
                             WidthRequest="100"
                             HeightRequest="85"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
                                <Image Source="{Binding Imagem}" WidthRequest="120" HeightRequest="120" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </Border>
                            <Label Text="{Binding Nome}" FontSize="18" VerticalOptions="Center" TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
