<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:caca360"
       x:Class="caca360.AppShell"
       FlyoutBehavior="Disabled">
    <ShellContent Title="Main Page" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Login" Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    <TabBar>
        <ShellContent Title="Dashboard" Route="Dashboard" ContentTemplate="{DataTemplate local:DashboardPage}" />
        <ShellContent Title="Abate" Route="Abate" ContentTemplate="{DataTemplate local:AbatePage}" />
        <ShellContent Title="Censos" Route="Censos" ContentTemplate="{DataTemplate local:CensosPage}" />
        <ShellContent Title="Perfil" Route="ProfilePage" ContentTemplate="{DataTemplate local:ProfilePage}" />
        <ShellContent Title="Zonas de Caça" Route="ZonasPage" ContentTemplate="{DataTemplate local:ZonasPage}" />
        <ShellContent Title="Informações" Route="InfosPage" ContentTemplate="{DataTemplate local:InfosPage}" />
    </TabBar>
</Shell>